{
    "reportDescriptionlessDisables": true,
    "extends": [
        "stylelint-config-sass-guidelines",
        "stylelint-config-twbs-bootstrap/scss",
        "stylelint-config-rational-order"
    ],
     "plugins": [
        "stylelint-scss",
        "stylelint-use-nesting",
        "stylelint-max-root-rules",
        "stylelint-selector-bem-pattern",
        "stylelint-max-lines"
    ],
    "rules": {
        "linebreaks": "unix",
        "indentation": 4,
        "max-empty-lines": 2,
        "selector-max-empty-lines": 0,
        "function-max-empty-lines": 0,
        "value-list-max-empty-lines": 1,
        "declaration-empty-line-before": null,
        "selector-class-pattern": [
            "^[a-zA-Z0-9\\-_]+$"
        ],
        "csstools/use-nesting": true,
        "max-nesting-depth": [4, {
             "ignore": ["blockless-at-rules", "pseudo-classes"]
        }],
        "pitcher/max-lines": 300,
        "pitcher/max-root-rules": 12,
        "max-line-length": [120, {
            "ignore": ["comments"],
            "ignorePattern": "/\\$(.+?):/"
        }],
        "selector-max-type": [0, {
            "ignore": ["child"],
            "ignoreTypes": ["/^(html|body|svg|picture|img)\\.?/"]
        }],
        "selector-max-compound-selectors": 4,
        "rule-empty-line-before": ["always", {
            "ignore": ["after-comment", "first-nested"]
        }],
        "no-duplicate-selectors": true,
        "scss/at-else-closing-brace-newline-after": "always-last-in-chain",
        "scss/at-else-closing-brace-space-after": "always-intermediate",
        "scss/at-else-empty-line-before": "never",
        "scss/at-if-closing-brace-newline-after": "always-last-in-chain",
        "scss/at-if-closing-brace-space-after": "always-intermediate",
        "scss/at-import-no-partial-leading-underscore": true,
        "scss/at-mixin-argumentless-call-parentheses": "always",
        "scss/selector-no-redundant-nesting-selector": true,
        "scss/double-slash-comment-empty-line-before": ["always", {
            "except": ["first-nested"],
            "ignore": ["between-comments", "stylelint-commands"]
        }],
        "scss/selector-nest-combinators": "always",
        "scss/dollar-variable-default": [true, {
            "ignore": "local"
        }],
        "scss/dollar-variable-pattern": [
            "^[a-zA-Z][a-zA-Z-\\d]*$"
        ],
        "scss/at-extend-no-missing-placeholder": null,
        "scss/at-rule-no-unknown": [true, {
            "ignoreAtRules": ["property"]
        }],
        "order/order": [
           "dollar-variables",
           "custom-properties"
        ],
        "order/properties-alphabetical-order": false,
        "plugin/rational-order": [true, {
            "border-in-box-model": false,
            "empty-line-between-groups": true
        }],
        "property-no-unknown": [true, {
            "ignoreProperties": ["inherits", "initial-value", "syntax", "content-visibility"]
        }],
        "selector-pseudo-element-no-unknown": [true, {
            "ignorePseudoElements": ["track", "thumb"]
        }],
        "selector-no-qualifying-type": [true, {
            "ignore": ["attribute", "class"]
        }],
        "selector-list-comma-newline-after": "always-multi-line",
        "value-list-comma-newline-after": "always-multi-line",
        "value-list-comma-newline-before": "never-multi-line",
        "value-list-comma-space-after": "always-single-line",
        "plugin/selector-bem-pattern": {
            "preset": "bem",
            "implicitComponents": ["source/css/components/**/*.scss", "source/css/layout/**/*.scss", "source/css/pages/**/*.scss"]
        }
    }
}
