{
    "extends": [
        "stylelint-config-sass-guidelines",
        "stylelint-config-twbs-bootstrap/scss",
        "stylelint-config-rational-order"
    ],
     "plugins": [
        "stylelint-a11y",
        "stylelint-csstree-validator",
        "stylelint-no-unsupported-browser-features",
        "stylelint-performance-animation",
        "stylelint-scss",
        "./stylelint.max-lines.js"
    ],
    "rules": {
        "indentation": 4,
        "selector-class-pattern": [
            "^[a-z0-9\\-_]+$"
        ],
        "max-nesting-depth": 3,
        "intecmedia/max-lines": 300,
        "max-line-length": [120, {
            "ignore": ["comments"],
            "ignorePattern": "/\\$(.+?):/"
        }],
        "declaration-no-important": null,
        "selector-max-type": null,
        "selector-max-compound-selectors": 3,
        "scss/at-else-closing-brace-newline-after": "always-last-in-chain",
        "scss/at-else-closing-brace-space-after": "always-intermediate",
        "scss/at-else-empty-line-before": "never",
        "scss/at-if-closing-brace-newline-after": "always-last-in-chain",
        "scss/at-if-closing-brace-space-after": "always-intermediate",
        "scss/at-import-no-partial-leading-underscore": true,
        "scss/at-mixin-argumentless-call-parentheses": "always",
        "scss/selector-no-redundant-nesting-selector": true,
        "order/order": [
           "dollar-variables",
           "custom-properties"
        ],
        "order/properties-alphabetical-order": false,
        "plugin/rational-order": [true, {
            "border-in-box-model": false,
            "empty-line-between-groups": true
        }],
        "property-no-unknown": [true, {
            "ignoreProperties": [
                "font-range", "min-font-size", "max-font-size", "lower-font-range", "upper-font-range",
                "line-height-range", "min-line-height", "max-line-height", "lower-line-height-range", "upper-line-height-range",
                "letter-spacing-range", "min-letter-spacing", "max-letter-spacing", "letter-spacing-range", "letter-spacing-range"
            ]
        }],
        "selector-pseudo-element-no-unknown": [true, {
            "ignorePseudoElements": [
                "at-least",
                "at-most",
                "between",
                "exactly",
                "thumb",
                "track"
            ]
        }],
        "selector-no-qualifying-type": [true, {
            "ignore": ["attribute", "class", "id"]
        }],
        "plugin/no-low-performance-animation": [true, {
            "severity": "warning",
            "ignore": [
                "background",
                "background-color",
                "background-position",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "box-shadow",
                "color",
                "fill",
                "height",
                "opacity",
                "stroke-dashoffset",
                "transform",
                "width"
            ]
        }],
        "plugin/no-unsupported-browser-features": [true, {
            "severity": "warning",
            "ignore": [
                "calc",
                "css-featurequeries",
                "css-gradients",
                "css-sticky",
                "flexbox",
                "font-unicode-range",
                "multicolumn",
                "object-fit",
                "outline",
                "pointer-events",
                "rem",
                "transforms3d",
                "viewport-units",
                "will-change"
            ]
        }],
        "a11y/no-outline-none": true,
        "a11y/selector-pseudo-class-focus": true,
        "csstree/validator": {
            "ignore": ["font-display"]
        }
    }
}
